#!/usr/bin/env perl

use 5.006;
use strict;
use warnings;

# helper script for workaround for
# https://github.com/appveyor/ci/issues/2351

if ( !caller ) {
    main(@ARGV);
    exit 1;
}

sub main {
    die "Environment variable 'APPVEYOR_JOB_NAME' not set.\n" if !exists $ENV{APPVEYOR_JOB_NAME};
    die "Cannot parse 'APPVEYOR_JOB_NAME' environment variable: $ENV{APPVEYOR_JOB_NAME}\n" if $ENV{APPVEYOR_JOB_NAME} !~ m{ ^ Environment: \s+ (.*) }xsm;
    ## no critic (RegularExpressions::ProhibitCaptureWithoutTest)
    my $env_vars = $1;

    ## no critic (ValuesAndExpressions::RequireInterpolationOfMetachars)
    ## no critic (BuiltinFunctions::ProhibitComplexMappings)
    ## no critic (RegularExpressions::RequireDotMatchAnything)
    ## no critic (RegularExpressions::RequireExtendedFormatting)
    ## no critic (RegularExpressions::RequireLineBoundaryMatching)
    print map { '$env:' . $_ . "\n" } map { my $x = $_; $x =~ s{ ( [^=]+ ) = (.* ) }{$1="$2"}xsm; $x } split /,\s+/, $env_vars;

    exit 0;
}

1;

__END__

